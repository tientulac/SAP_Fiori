<mvc:View controllerName="ui5.walkthrough.controller.App"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
    <App>
        <pages>
            <Page title="{i18n>homePageTitle}">
                <mvc:XMLView viewName="ui5.walkthrough.view.Header" />
                <content>  
                    <Panel headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button text="{i18n>showHelloButtonText}"
                                    press=".onShowHello" />
                            <Input value="{/baseEntity/name}"
                                   description="Hello {/baseEntity/name}"
                                   valueLiveUpdate="true"
                                   width="60%" />
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>