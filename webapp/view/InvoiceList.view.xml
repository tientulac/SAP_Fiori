<mvc:View
    controllerName="ui5.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="invoiceList"
        headerText="{i18n>invoiceListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{
            path : 'invoice>/Invoices',
            sorter : {
               path : 'ProductName' 
            }
         }">
        <headerToolbar>
            <OverflowToolbar id="_IDGenOverflowToolbar1">
                <Title text="{i18n>invoiceListTitle}"/>
                <ToolbarSpacer/>
                <SearchField 
                  width="50%" 
                  search=".onFilterInvoices"/>
                <Button id="_IDGenButton1"
                    tooltip="Sort"
                    icon="sap-icon://sort"
                    press="handleSortButtonPressed"/>
                <Button id="_IDGenButton2"
                    tooltip="Filter"
                    icon="sap-icon://filter"
                    press="handleFilterButtonPressed"/>
                <Button id="_IDGenButton3"
                    tooltip="Group"
                    icon="sap-icon://group-2"
                    press="handleGroupButtonPressed"/>
                <ToggleButton id="_IDGenToggleButton1" icon="sap-icon://menu" tooltip="Enable Custom Context Menu" press="onToggleContextMenu" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Product Name" />
            </Column>
            <Column>
                <Text text="Shipper Name" />
            </Column>
            <Column>
                <Text text="ExtendedPrice" />
            </Column>
            <Column>
                <Text text="Status" />
            </Column>
            <Column>
                <Text text="Action" />
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle" press="onPress" type="Navigation">
                <cells>
                    <Text
                    text="{invoice>ProductName}" />
                    <Text
                    text="{invoice>ShipperName}" />
                    <ObjectNumber
                        number="{
                            parts: [
                                'invoice>ExtendedPrice',
                                'view>/currency'
                            ],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {
                                showMeasure: false
                            }
                        }"
                        numberUnit="{view>/currency}"
                        state="{= ${invoice>ExtendedPrice} > 50 ? 'Error' : 'Success' }"
                    />
                    <ObjectStatus
                    text="{
                        path: 'invoice>Status',
                        formatter: '.formatter.statusText'
                    }"/>
                    <VBox class="action">
                        <Button 
                            tooltip="Edit"
                            icon="sap-icon://edit"
                            press=".onOpenEditDialog(${invoice>})"/>
                        <Button 
                            tooltip="Delete"
                            icon="sap-icon://delete"
                            press=".onOpenConfirmDialog(${invoice>})"/>
                    </VBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>