<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core">
    <Dialog id="editInvoiceDialog"
            class="editInvoiceDialog"
            title="Hello {/invoiceEdit/ShipperName}">
        <content class="content-modal">
            <core:Icon src="sap-icon://hello-world"
                       class="sapUiMediumMargin" />
            <Text text="{/invoiceEdit/ShipperName}" />
        </content>
        <beginButton>
            <Button text="{i18n>dialogCloseButtonText}"
                    press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>