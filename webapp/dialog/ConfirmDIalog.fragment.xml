<core:FragmentDefinition xmlns="sap.m"
                         xmlns:core="sap.ui.core">
    <Dialog id="confirmDialog"
            class="confirmModal"
            title="Thông báo">
        <content class="content-modal">
            <Text text="Bạn có muốn xác nhận"/>
        </content>
        <beginButton>
            <Button text="{i18n>dialogCloseButtonText}"
                    press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>